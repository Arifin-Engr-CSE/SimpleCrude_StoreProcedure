@model SimpleCrude_StoreProcedure.Models.Student
@{
    ViewData["Title"] = "Create Page";
}

<h2 class="text-info text-center"> Add New Student</h2>
<br />

<div class="row mt-2">
    <div class="col-md-4 offset-2">
        <form asp-action="CreateAndEdit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />



            <div class="form-group row">
                <label asp-for="Name" class=" col-sm-4 display-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Gender" class=" col-sm-4 display-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Gender" class="form-control" />
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Address" class=" col-sm-4 display-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Address" class="form-control" />
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>



            

            <div class="form-group">

                <input type="submit" value="Save" class="btn btn-success" />

            </div>
        </form>
    </div>
</div>